<?xml version="1.0" encoding="utf-8"?>

<com.github.clans.fab.FloatingActionMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/f4_fab_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right"
    android:layout_marginBottom="24dp"
    android:layout_marginRight="24dp"
    fab:menu_icon="@drawable/ic_flower"
    fab:menu_animationDelayPerItem="0"
    fab:menu_colorNormal="@color/wheat"
    fab:menu_colorPressed="@color/wheat_deep_01"
    fab:menu_colorRipple="@color/wheat_deep_02"
    fab:menu_labels_hideAnimation="@anim/jump_to_down"
    fab:menu_labels_showAnimation="@anim/jump_from_down"
    fab:menu_labels_style="@style/MenuLabelsStyle"
    fab:menu_shadowColor="#444">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/f4_fab_rate_05"
        style="@style/MenuButtonsSmall.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        fab:fab_label="5x" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/f4_fab_rate_04"
        style="@style/MenuButtonsSmall.GreenDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        fab:fab_label="4x" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/f4_fab_rate_03"
        style="@style/MenuButtonsStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        fab:fab_label="3x" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/f4_fab_rate_02"
        style="@style/MenuButtonsSmall.Yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        fab:fab_label="2x" />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/f4_fab_rate_01"
        style="@style/MenuButtonsSmall.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        fab:fab_label="1x" />


</com.github.clans.fab.FloatingActionMenu>

